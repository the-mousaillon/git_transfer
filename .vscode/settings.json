{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    "python.linting.pylintArgs": [
        "--init-hook",
        "import sys; sys.path.append(${workspaceFolder})"
    ]
}